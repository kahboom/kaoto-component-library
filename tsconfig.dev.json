{
	"include": ["src", "node_modules"],
	"exclude": ["dist", "**/*.test.ts*"],
	"compilerOptions": {
	  "outDir": "dist",
	  "lib": ["es6", "dom", "es2018.promise", "es2019", "esnext"],
	  "target": "es5",
	  "declaration": true,
	  "declarationMap": true,
	  "sourceMap": true,
	  "noImplicitAny": true,
	  "noImplicitThis": true,
	  "removeComments": true,
	  "strictNullChecks": true,
	  "experimentalDecorators": true,
	  "downlevelIteration": true,
	  "skipLibCheck": true,
	  "jsx": "react-jsx"
	},
	"paths": {
		"*": ["*", "types/*"]
	}
}
